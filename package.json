{
  "name": "wallabag-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension to save pages to Wallabag",
  "main": "background.js",
  "scripts": {
    "build": "webpack --mode=production --config webpack.config.js",
    "build:analyze": "ANALYZE=true npm run build && npx webpack-bundle-analyzer dist/stats.json",
    "build:prod": "node scripts/build-optimization.js",
    "dev": "webpack --mode=development --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,html,css}",
    "format:check": "prettier --check src/**/*.{js,ts,html,css}",
    "package": "npm run build:prod && web-ext build",
    "package:sign": "npm run package && web-ext sign",
    "build:internal": "./scripts/build-internal.sh",
    "package:internal": "node scripts/internal-testing.js",
    "build:store": "./scripts/build-store.sh",
    "package:store": "npm run build:store",
    "monitoring:setup": "node scripts/monitoring-setup.js",
    "monitoring:security": "npm audit --audit-level moderate",
    "monitoring:dependencies": "npm outdated",
    "monitoring:performance": "npm run build:prod && du -sh dist/",
    "typecheck": "tsc --noEmit --project tsconfig.prod.json",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "clean": "rm -rf dist web-ext-artifacts coverage internal-testing store-submission monitoring"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.0.0",
    "web-ext": "^7.0.0",
    "webpack": "^5.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.0.0"
  },
  "keywords": [
    "chrome-extension",
    "wallabag",
    "read-later",
    "bookmarks",
    "productivity",
    "save-pages",
    "reading",
    "typescript"
  ],
  "author": "Wallabag Chrome Extension Contributors",
  "license": "MIT",
  "homepage": "https://github.com/arimakouyou/wallabag-chrome-extension#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/arimakouyou/wallabag-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/arimakouyou/wallabag-chrome-extension/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": false
}