{
  "manifest_version": 3,
  "name": "Wallabag Saver",
  "version": "1.0.0",
  "description": "WallabagにページのURLを簡単に保存できるChrome拡張機能です。ワンクリックでページを後で読むリストに追加できます。",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Wallabagに保存",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "cookies",
    "scripting"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "popup.html",
        "popup.css",
        "options.html",
        "options.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https: http: 'self'"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "現在のページをWallabagに保存"
    },
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "現在のページをWallabagに保存（代替キー）"
    }
  },

  "minimum_chrome_version": "88",

  "author": "Wallabag Chrome Extension Team",
  
  "homepage_url": "https://github.com/wallabag/chrome-extension"
}